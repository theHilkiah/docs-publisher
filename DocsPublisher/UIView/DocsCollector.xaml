<UserControl x:Class="DocsPublisher.UIView.DocsCollector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocsPublisher.UIView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Padding="10" TextAlignment="Center">Welcome</TextBlock>
            <WrapPanel>
                <TextBox Text="{Binding Path = FirstName, Mode = TwoWay}" Width="255"/>
                <Button Width="25">...</Button>
            </WrapPanel>
            <ListBox SelectionMode="Multiple" />
        </StackPanel>
    </Grid>
</UserControl>
